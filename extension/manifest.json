{
  "manifest_version": 3,
  "name": "CallGuard - Real-time Scam Protection",
  "version": "1.0.0",
  "description": "Real-time scam detection during voice calls with early risk scoring",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "ws://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CallGuard Protection"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["models/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 